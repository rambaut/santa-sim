<santa xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="santa.xsd">
	<replicates>1</replicates>

	<simulation>
		<generationCount>10001</generationCount>

		<genome>
			<length>9</length>
		</genome>

		<population>
			<populationSize>1000</populationSize>

			<inoculum>
				<sequence label="virus1gen1000">
					GAAGAAGAG
				</sequence>
			</inoculum>
		</population>

		<fitnessFunction>
			<nucleotides>
				<neutralFitness/>
			</nucleotides>
		</fitnessFunction>

		<mutator>
			<nucleotideMutator>
				<mutationRate>1.0E-4</mutationRate>
				<transitionBias>2.0</transitionBias>
			</nucleotideMutator>
		</mutator>

		<replicator>
			<clonalReplicator/>
		</replicator>

		<samplingSchedule>
			<sampler>
				<atFrequency>1000</atFrequency>
				<fileName>trees_%r.nex</fileName>
				<tree>
					<sampleSize>100</sampleSize>
					<format>NEXUS</format>
					<label>tip_%g_%s</label>
				</tree>
			</sampler>
		</samplingSchedule>

	</simulation>

</santa>
